{% extends 'base.html.twig' %}
{% block body %}
    <div class="container ms-4">
        <div class="mt-4 p-4 justify-content-center text-lg-center text-light">
            <h1>Toutes les séries </h1>
        </div>
            {% for program in programs %}
            <div>
                <h2 class="text-light">Catégorie : {{ program.category.name }}</h2>
                <h3 class="text-light">{{ program.id }} - {{ program.title }}</h3>
                <p class="text-light">{{ program.summary }}</p>
                {# Lien vers la fiche de la série : #}
                <a class="text-warning" href="{{ path("program_show", { program: program.id }) }}">> Voir la fiche</a>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}


{% endblock %}