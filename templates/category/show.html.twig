{% extends 'base.html.twig' %}
{% block body %}
    <div class="container text-light">
        <h2>{{ category.name }}</h2>
        <ul>
            {% for program in programs %}
                <li class="text-start"><p>{{ program.id }} - {{ program.title }}</p>
                    <p>Description: {{ program.summary }} <a href="{{ path("program_show", {program: program.id}) }}" class="text-warning">Découvrir cette série</a></p>
                </li>
            {% else %}
                <p>Aucune série trouvée</p>
            {% endfor %}

        </ul>
    </div>
    <a href="{{ path("category_index") }}" class="ms-4 text-warning">
    < Retour à la liste des categories
    </a>
{% endblock %}
